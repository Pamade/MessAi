{
    "manifest_version": 3,
    "name": "Messenger Gemini Assistant",
    "version": "1.0.0",
    "description": "Use command in Facebook Messenger to generate AI responses",
    "permissions": [
        "storage",
        "tabs",
        "contextMenus"
    ],
    "host_permissions": [
        "https://*.messenger.com/*",
        "https://*.facebook.com/*"
    ],
    "action": {
        "default_title": "Messenger AI Assistant"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.messenger.com/*",
                "https://*.facebook.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}